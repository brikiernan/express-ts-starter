{
  "name": "express-ts-starter-kit",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc",
    "dev": "ts-node-dev --respawn -r dotenv/config src/start.ts",
    "start": "node dist/start.js",
    "test": "jest --setupFiles dotenv/config",
    "test:watch": "jest --watchAll --setupFiles dotenv/config",
    "test:ci": "jest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.12.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^16.9.1",
    "dotenv": "^10.0.0",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  }
}

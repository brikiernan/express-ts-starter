{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES5",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src", "modules.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
